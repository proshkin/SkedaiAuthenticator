"scripts": {
  "postinstall": "electron-builder install-app-deps"
},
"build": {
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "extraResources"
  ],
  "extraResources": [
    {
      "from": "node_modules/electron-ffmpeg/ffmpeg",
      "to": "ffmpeg",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": "portable"
  },
  "mac": {
    "target": "dmg"
  }
}
