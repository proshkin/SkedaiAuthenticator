{
  "name": "authenticator",
  "version": "0.0.1",
  "main": "authenticator.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder"
  },
  "build": {
    "appId": "com.authenticator.scheduler.skedai",
    "productName": "authenticator_${version}",
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": ["dir"],
      "artifactName": "authenticator_mac_${version}.${ext}"
    },
    "directories": {
      "output": "build"
    }
  },
  "devDependencies": {
    "electron": "^27.0.2",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  }
}
